@import ('nib')
@import url('http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700')


/* @CUSTOM colors for easy use */
_accent = #FF4545
/* end @CUSTOM */

.open-sans
  font-family 'Open Sans', sans-serif

.pure-g [class *='pure-u']
  @extends .open-sans

html,
body
  width 100%
  height 100%
  background #262626
  color #FFFFFF
  @extends .open-sans

.pure-form
  input[type='text'], input[type='password'], input[type='email'], input[type='url'], input[type='date'], input[type='month'], input[type='time'], input[type='datetime'], input[type='datetime-local'], input[type='week'], input[type='number'], input[type='search'], input[type='tel'], input[type='color'], select, textarea
    @extends .open-sans
    padding 12px 15px
    border-width 2px !important
    box-shadow none
    width 100%
    &:focus
      border-color #FFCC44
    &:invalid
      border-color _accent


  label
    text-transform uppercase
    font-size 13px
    letter-spacing 1px
    display block
    padding 5px 0
  
  .mc-field-group
    margin-bottom 20px

.pure-button
  @extends .open-sans
  background _accent
  font-weight 600
  text-transform uppercase
  color #FFF
  font-size 14px
  letter-spacing 1px
  padding 15px 25px


/* @CUSTOM CSS for fast start */
.container
  width 960px
  margin auto
  &> *
    padding-left 40px
    padding-right 40px

.page
  width 100%
  height auto

h1, h2, h3
  font-weight 400
h4, h5, h6
  font-weight 600

hr
  display block
  margin-top 30px
  margin-bottom 20px
  border none
  border-top 2px solid #666

.spacer-5
  height 5px
.spacer-10
  height 10px
.spacer-20
  height 20px
.spacer-40
  height 40px
.spacer-60
  height 60px
.spacer-80
  height 80px
.spacer-100
  height 100px

a.link
  text-decoration none
  color #CCC
  box-shadow inset 0 -2px 0 rgba(#CCC, 0.2)
  transition color 0.3s ease, box-shadow 0.3s ease
  display inline-block
  &:hover
    color _accent
    box-shadow inset 0 -2px 0 rgba(_accent, 0.3)

  &.link-accent
    color _accent
    box-shadow inset 0 -2px 0 rgba(_accent, 0.2)
    &:hover
      color #FFF
      box-shadow inset 0 -2px 0 rgba(#FFF, 0.3)

/* end @CUSTOM */

p.light
  font-weight 200
  letter-spacing 2px

.notify
  position fixed
  bottom 0
  left 0
  width 100%
  background _accent
  color #FFF
  h4
    letter-spacing 1px
    text-transform uppercase
    text-align center
    font-size 13px

.mobile
  display none
.desktop
  display block

@media all and (max-width:960px)
  .container
    width 100%
    margin auto

@media (max-width: 767px)
  form.pure-form.pure-form
    input[type='text'], input[type='password'], input[type='email'], input[type='url'], input[type='date'], input[type='month'], input[type='time'], input[type='datetime'], input[type='datetime-local'], input[type='week'], input[type='number'], input[type='search'], input[type='tel'], input[type='color'], select, textarea
      width 100%

  .container
    text-align center

  .mobile
    display block
  .desktop
    display none